<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardBackGround"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_dial_comentario_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="COMENTARIO"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--ScrollView
        android:layout_below="@+id/txt_dial_comentario_titulo"
        android:id="@+id/scroll_dial_coment"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_dial_comentario_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_dial_comentario_titulo">

        <EditText
            android:id="@+id/et_dial_comentario_agregar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="Deja tu comentario"
            android:isScrollContainer="true"

            android:textSize="21sp" />
    </android.support.design.widget.TextInputLayout>
    <!--/LinearLayout>

</ScrollView-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dial_comentario_layout"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dial_comentario_cancelar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="15dp"
                android:text="Cancelar"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dial_comentario_aceptar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="15dp"
                android:text="Comentar"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>